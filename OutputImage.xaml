<Window x:Class="WpfUI.OutputImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI"
        mc:Ignorable="d"
        Title="OutputImage" Height="385" Width="340">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="85*"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="300" Margin="15,15,0,0" VerticalAlignment="Top" Width="300" BorderBrush="#FFC5C5C5" Grid.ColumnSpan="2" RenderTransformOrigin="0.443,0.378">
            <Image x:Name="imageSource" HorizontalAlignment="Left" Height="300" Margin="0,0,0,0" VerticalAlignment="Top" Width="300" StretchDirection="DownOnly" RenderTransformOrigin="0.417,0.218"/>
        </Border>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="130,320,0,0" Grid.ColumnSpan="2" Click="btnSave_Click"/>

    </Grid>
</Window>
